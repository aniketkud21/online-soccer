          <div class="input-field">
            <input
              type="points"
              id="points"
              name="points"
              placeholder="Points"
              class="password"
              required=""
            />
          </div>
          <button class="login-btn" type="submit">Register</button>
        </form>
        <p class="text3">
          Already a player?
          <a class="register" href="/login">
            <font style="color: #ffffff">Sign In Now</font>
          </a>
        </p>
      </div>
    </div>
  </body>
</html>